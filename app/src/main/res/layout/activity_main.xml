<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="andressancho.com.reproductor.MainActivity">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:orientation="horizontal">


                    <ListView
                        android:id="@+id/lista"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/background_dark" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/background_dark">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                >


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/cover"
                                        android:layout_width="200dp"
                                        android:layout_height="120dp"
                                        android:layout_weight="1"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginTop="10dp"
                                        app:srcCompat="@mipmap/ic_launcher_round" />

                                    <ImageView
                                        android:id="@+id/rating"
                                        android:layout_width="105dp"
                                        android:layout_height="25dp"
                                        android:layout_weight="1"
                                        android:layout_marginTop="65dp"
                                        android:layout_marginRight="5dp"
                                        app:srcCompat="@drawable/uno" />

                                </LinearLayout>
                                <TextView
                                    android:id="@+id/canciontv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="CanciÃ³n"
                                    android:layout_marginLeft="50dp"
                                    android:textColor="@android:color/background_light"
                                    android:textSize="22sp" />

                                <TextView
                                    android:id="@+id/artista"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Artista"
                                    android:layout_marginLeft="50dp"
                                    android:textColor="@android:color/background_light"
                                    android:textSize="14sp" />

                                <SeekBar
                                    android:id="@+id/seekBar"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="3dp"
                                    android:layout_marginRight="5dp"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:orientation="horizontal"
                                    >

                                    <Button
                                        android:id="@+id/atrasbtn"
                                        android:layout_width="68dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/prev"
                                        android:onClick="prevClicked" />

                                    <Button
                                        android:id="@+id/pauseplay"
                                        android:layout_width="68dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/play"
                                        android:onClick="playClicked"
                                        />
                                    <Button
                                        android:id="@+id/stop"
                                        android:layout_width="68dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:onClick="stopClicked"
                                        android:background="@drawable/pause" />

                                    <Button
                                        android:id="@+id/adelante"
                                        android:layout_width="68dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/next"
                                        android:onClick="nextClicked" />



                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="48dp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/textView8"
                                            android:layout_width="110dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="5dp"
                                            android:layout_weight="1"
                                            android:layout_marginTop="5dp"
                                            android:text="Volumen: "
                                            android:textColor="@android:color/background_light"
                                            android:textSize="10sp" />

                                        <SeekBar
                                            android:id="@+id/volumeSk"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1" />

                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1">

                                        <TextView
                                            android:id="@+id/letratx"
                                            android:layout_width="match_parent"
                                            android:layout_height="100000dp"
                                            android:layout_alignParentBottom="true"
                                            android:text="Aqui va la letra"
                                            android:layout_marginBottom="-9000dp"
                                            android:textColor="@android:color/background_light"
                                            android:textSize="10sp" />
                                    </RelativeLayout>
                                </LinearLayout>


                            </LinearLayout>




                        </RelativeLayout>



                </LinearLayout>
        </RelativeLayout>
</android.support.constraint.ConstraintLayout>
